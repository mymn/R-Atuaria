#usar datas julianas(01/01/1900)
#data pode ser no formato que quiser
library(epitools)
library(chron)
calendr="01/02/1995"
as.Date(calendr, "%d/%m/%y")
View(calendr)

Tocalendar=function(calendr){ #tranformar data juliana em data(dd/mm/aaaa)
  calendr=as.Date(calendr, origin="1900/01/01")
  calendr=as.Date(calendr, "%y/%m/%d")
  return(calendr)
}
calendr=2
Tojulian=function(calendr){ #transformar data em data juliana
  calendr=julian(calendr,origin=(c(month = 1, day = 1, year = 1900)))
  return(calendr)
}
calendr
